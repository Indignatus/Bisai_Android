<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_torneo_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
    tools:context="com.bisai.bisai.controller.activities.master_detail.TorneoListActivity">

    <TextView
        android:id="@+id/nombreTorneo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="TextView"
        android:textAlignment="center" />


    <ListView
        android:id="@+id/listaequipos"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_above="@+id/seleccionEquipoPropio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:theme="@android:style/Theme.Material" />

    <TextView
        android:id="@+id/nParticipantes"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_above="@+id/listaequipos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_weight="0.05"
        android:text="TextView" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nParticipantes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_weight="0.05"
        android:text="TextView" />

    <Button
        android:id="@+id/seleccionEquipoPropio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_weight="0.05"
        android:text="Button"
        android:theme="@android:style/Theme.Wallpaper" />


</RelativeLayout>